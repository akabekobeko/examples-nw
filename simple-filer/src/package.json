{
    "name": "SimpleFiler",
    "version": "1.0.0",
    "description": "Example of the simple filer in node-webkit.",
    "main": "index.html",
    "window": {
        "title": "Simple Filer",
        "toolbar": true,
        "frame": true,
        "resizable": true,
        "width": 800,
        "height": 480,
        "position": "mouse"
    },
    "platformOverrides": {
        "osx": {
            "window": {
                "toolbar": false
            }
        },
        "win": {
            "window": {
                "toolbar": false
            }
        },
        "linux": {
            "window": {
                "toolbar": false
            }
        }
    }
}